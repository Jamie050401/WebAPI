{
  "Logging": {
    "LogLevel": {
      "Default": "Error",
      "Microsoft.AspNetCore": "Error"
    }
  },
  "Serilog": {
    "Using": ["Serilog.Sinks.SQLite", "Serilog.Sinks.Console"],
    "MinimumLevel": "Error",
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "SQLite",
        "Args": {
          "sqliteDbPath": "../../../Logs/logs.sqlite3",
          "tableName": "Logs",
          "storeTimestampInUtc": true
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithThreadId",
      "WithMachineName"
    ]
  },
  "Database": {
    "DatabaseType": "Sqlite",
    "ConnectionStrings": {
      "Sqlite": "Data Source=Database.sqlite3"
    }
  },
  "AllowedHosts": "*"
}
